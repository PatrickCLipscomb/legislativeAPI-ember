<h1>Legislator</h1>
<form class="form-group jumbotron col-xs-6 col-xs-offset-3">
  <div class="form-control">
    <label for="zip">Zip</label>
    {{input value=zip id="zip"}}
  </div>
  <button class="btn btn-primary" {{action 'zipLookup'}}>Submit</button>
</form>
<div class="form-group jumbotron col-xs-6 col-xs-offset-3">
  <button class="btn btn-info" {{action 'recentBills'}}>See a linkable list of recent bills</button>
</div>
<form class="form-group jumbotron col-xs-6 col-xs-offset-3">
  <div class="form-control">
    <label for="bill">Bill</label>
    {{input value=bill id="bill"}}
  </div>
  <button class="btn btn-primary" {{action 'billLookup'}}>Submit</button>
</form>
<form class="jumbotron col-xs-6 col-xs-offset-3">
  <div class="form-group">
    <label for="tag-type-select">Committees by Chamber</label>


    <div>Tag Type:
      <select {{action 'selectTagType' on='change'}} id="tag-type-select">
        {{#each tagTypes as |type|}}
          <option value="{{type}}" selected={{eq type model.tagType}}>
            {{type}}
          </option>
        {{/each}}
      </select>
    </div>
  </div>
  <button class="btn btn-primary" {{action 'committees'}}>Submit</button>
</form>
